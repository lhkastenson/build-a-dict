<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Word Type</th>
      <th>Definition</th>
      <th>Text</th>
      <th>Origin</th>
      <th>Example</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.word %></td>
        <td><%= entry.word_type %></td>
        <td><%= entry.definition %></td>
        <td><%= entry.origin %></td>
        <td><%= entry.example %></td>
        <td><%= entry.author %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

